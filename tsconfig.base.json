{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*"]
}
